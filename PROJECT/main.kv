#:import Label kivy.uix.label.Label
#:import Button kivy.uix.button.Button

<Container>:
    GridLayout:
        rows: 2
        cols: 1

        BoxLayout:
            size_hint_y: 0.08
            Button:
                size_hint_x: None
                width: self.height
                pos_hint: {'top': 1, 'x': 0}
                background_normal: "./images/drop_menu.png"
            Label:
                text: ''
            Button:
                size_hint_x: None
                width: self.height
                pos_hint: {'top': 1, 'x': 1}
                background_normal: "./images/settings.png"

        GridLayout:
            rows: len(app.data)
            canvas:
                Rectangle:
                    source: './images/fon.png'
                    size: self.size
                    pos: self.pos
            on_parent:
                for i in range(len(app.data)): self.add_widget(Button(text=app.data[i], background_color=(0,0,0,0.1), on_press=root.press,
                on_release=root.release))
