#:import webbrowser webbrowser
<InfoScreen>:
    name: 'info'
    box: box
    scr: scr
    more_inf: more_inf
    add_btn: add_btn
    MDBoxLayout:
        orientation: 'vertical'
        padding: 10
        MDCard:
            size_hint: 0.9, 0.9
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            radius: [25, 25, 25, 25]
            orientation: "vertical"
            spacing: 5
            padding: 10
            ScrollView:
                id: scr
                MDBoxLayout:
                    id: box
                    orientation: 'vertical'
                    adaptive_size: True
                    size_hint_x: 1
                    size_hint_y: 1
                    AsyncImage:
                        size_hint: 1, 0.6
                        allow_stretch: True
                        source: root.obj_pict
                    MDLabel:
                        size_hint_y: 0.3
                        text: root.obj_name
                        halign: 'center'
                        pos_hint: {'center_x': 0.5}
                        font_style: 'H4'
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: None, 0.1
                        adaptive_size: True
                        pos_hint: {'center_x': 0.5}
                        MDRectangleFlatButton:
                            id: more_inf
                            text: 'Больше информации'
                            on_release: root.get_information(self)
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: 1
                adaptive_height: True
                pos_hint: {'right': 1}
                padding: [0, 10, 0, 0]
                MDRectangleFlatButton:
                    id: add_btn
                    text: 'Добавить\nв помеченные'
                    pos_hint: {'left': 0}
                    on_release: root.add_to_marked(self)
                Widget:
                MDFloatingActionButton:
                    icon: 'arrow-left-bold'
                    pos_hint: {'right': 1}
                    on_release: app.change_screen(root.manager, 'data')
