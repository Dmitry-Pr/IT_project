<AddObjScreen>:
    name: 'add_obj'

<ObjectsSets>:
    MDBoxLayout:
        orientation: 'vertical'
        Image:
            source: root.image
        MDLabel:
            text: 'Название'
            halign: 'center'
        MDTextField:
            id: name_inp
            max_text_length: 35
            size_hint_x: 0.8
            pos_hint: {'center_x': .5}
        MDBoxLayout:
            size_hint_x: 0.8
            pos_hint: {"center_x": .5}
            adaptive_height: True
            orientation: 'horizontal'
            MDLabel:
                text: "Тип объекта"
                size: self.texture_size
            MDLabel:
                id: type
                halign: 'right'
                text: 'architecture'
                size: self.texture_size
            MDBoxLayout:
                adaptive_size: True
                orientation: 'vertical'
                MDIconButton:
                    id: up
                    icon: 'chevron-up'
                MDIconButton:
                    id: down
                    icon: 'chevron-down'
        MDLabel:
            text: 'Описание'
            halign: 'center'
        ScrollView:
            pos_hint: {'center_x': .5}
            effect_cls: 'ScrollEffect'
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                pos_hint: {'center_x': .5}
                MDTextField:
                    id: info_inp
                    max_text_length: 663
                    size_hint_x: 0.8
                    pos_hint: {'center_x': .5}
                    mode: "rectangle"
                    multiline: True
        MDRectangleFlatButton:
            pos_hint: {'center_x': .5}
            id: conf
            text: 'Добавить'
        Widget:
            size_hint_y: 0.1